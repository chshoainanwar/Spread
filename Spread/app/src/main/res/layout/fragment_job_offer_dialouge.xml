<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".fragments.dialouge.JobOfferDialouge">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/_260sdp"
        app:layout_constraintDimensionRatio="1:1.3"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Job offer"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_23sdp"
                android:textColor="@color/job_offer"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_8sdp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/person" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_toRightOf="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Brooklyn Simmons"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/star"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_toLeftOf="@+id/ratting"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/ratting"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="5.0 (70)"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_14sdp" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotion video for my restaurant"
                android:textSize="@dimen/_15ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="@dimen/_10sdp" />


         <androidx.appcompat.widget.LinearLayoutCompat
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="@dimen/_10sdp"
             android:weightSum="2"
             android:layout_marginTop="@dimen/_10sdp">

             <androidx.appcompat.widget.LinearLayoutCompat
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10,000"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/app_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select counteroffer"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="@dimen/_10sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"/>
             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.cardview.widget.CardView
                 android:layout_width="@dimen/_200sdp"
                 android:layout_height="@dimen/_180sdp"
                 app:cardCornerRadius="@dimen/_10sdp"
                 android:layout_weight="1"
                 android:layout_gravity="center_vertical"
                 android:layout_marginEnd="@dimen/_10sdp"
                 >
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:src="@drawable/backgroundimage"
                 android:scaleType="centerCrop"
                  />

                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:src="@drawable/playbtn"
                     android:layout_gravity="center" />
             </androidx.cardview.widget.CardView>

         </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/declineoffer"
        android:layout_marginEnd="@dimen/_15sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_height="match_parent"
        android:src="@drawable/confirmoffer" />


</androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>