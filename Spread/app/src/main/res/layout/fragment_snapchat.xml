<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".fragments.auth.SnapchatFragment">

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_arrow_back_" />

    <TextView
        android:id="@+id/tvSocialMediaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:fontFamily="@font/inter_bold"
        android:text="Social Media"
        android:textColor="#090A0A"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSocialMediaLabel"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/inter_regular"
        android:text="Connect your Snapchat account. "
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvFollowers"
        android:layout_below="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="133K followers"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/yellow"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_below="@+id/tvDesc"
        android:layout_above="@+id/rlNext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSnap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/snap"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSocialMediaLabel"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/snap"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/rlNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        layout="@layout/field_button"/>

</RelativeLayout>